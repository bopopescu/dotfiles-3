#!/usr/bin/env zsh

findup() {
    FILE=$1
    while [ ! -e "${FILE}" ]; do
        if [ "$(pwd)" = "/" ]; then
            return
        fi
        cd ..
    done
    echo "$(pwd)"
}

# usage example
MIX=mix.exs
PDIR=$(findup ${MIX})

if [ "_$@" = "_pwd" ]; then
    echo $PDIR
    exit 0
fi

if [ "${PDIR}/${MIX}" != "/${MIX}" ]; then
    # echo "(cd ${PDIR}; mix $@)"
    cd ${PDIR}; mix $@
    exit 0
fi

echo "couldn't find file ${MIX}"
exit 1
