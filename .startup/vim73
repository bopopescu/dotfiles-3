#!/bin/sh

mkdir ~/git
cd ~/git
git clone git://github.com/splhack/macvim.git
cd macvim
./configure -prefix=$HOME -enable-pythoninterp --with-features=huge --enable-cscope --enable-multibyte
make
make install

echo "example:: next command"
echo
echo "git clone http://github.com/gmarik/vundle.git ~/.vim/bundle/vundle"
echo
echo "vim -c 'BundleInstall'"
echo
echo "cd ~/.vim/bundle/vimproc/ && make -f make_gcc.mak"
echo
echo "mkdir -p ~/.vim_plugins/vim_session"
echo
echo "wget 'https://raw.github.com/taku-o/downloads/master/DirDiff/DirDiff_mb.vim'; mv DirDiff_mb.vim ~/.vim/bundle/DirDiff.vim/plugin/DirDiff.vim"
echo
echo "Note: please installed python hashlib module."
echo "Note: please installed ctags."
echo "Note: syntax errors > http://d.hatena.ne.jp/heavenshell/20120109/1326089510"


